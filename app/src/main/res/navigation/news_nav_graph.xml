<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/news_nav_graph"
        app:startDestination="@id/breakingNewsFragment">

    <fragment
            android:id="@+id/breakingNewsFragment"
            android:name="vedant.tiwari.mrcnapp.fragments.BreakingNewsFragment"
            android:label="BreakingNewsFragment">
        <action
                android:id="@+id/action_breakingNewsFragment2_to_articleFragment"
                app:destination="@id/articleFragment"
                app:enterAnim="@anim/slide_in_right"
                app:exitAnim="@anim/slide_out_left"
                app:popEnterAnim="@anim/slide_in_left"
                app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
            android:id="@+id/savedNewsFragment"
            android:name="vedant.tiwari.mrcnapp.fragments.SavedNewsFragment"
            android:label="SavedNewsFragment">
        <action
                android:id="@+id/action_savedNewsFragment2_to_articleFragment"
                app:destination="@id/articleFragment"
                app:enterAnim="@anim/slide_in_right"
                app:exitAnim="@anim/slide_out_left"
                app:popEnterAnim="@anim/slide_in_left"
                app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
            android:id="@+id/searchNewsFragment"
            android:name="vedant.tiwari.mrcnapp.fragments.SearchNewsFragment"
            android:label="SearchNewsFragment">
        <action
                android:id="@+id/action_searchNewsFragment2_to_articleFragment"
                app:destination="@id/articleFragment"
                app:enterAnim="@anim/slide_in_right"
                app:exitAnim="@anim/slide_out_left"
                app:popEnterAnim="@anim/slide_in_left"
                app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
            android:id="@+id/articleFragment"
            android:name="vedant.tiwari.mrcnapp.fragments.ArticleFragment"
            android:label="ArticleFragment" />
</navigation>